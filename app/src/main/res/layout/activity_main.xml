    <Button
        android:id="@+id/btn_shoppingMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="348dp"
        android:background="@drawable/btn_main"
        android:text="@string/shopping_btn_main"
        android:textColor="@color/white"
        android:padding="@dimen/padding_10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_MainIntro" />

    <Button
        android:id="@+id/btn_chatMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="348dp"
        android:background="@drawable/btn_main"
        android:text="@string/messenger_btn_main"
        android:textColor="@color/white"
        android:padding="@dimen/padding_10dp"

        app:layout_constraintEnd_toStartOf="@+id/btn_inventoryMain"
        app:layout_constraintHorizontal_bias="0.427"
        app:layout_constraintStart_toEndOf="@+id/btn_shoppingMain"
        app:layout_constraintTop_toBottomOf="@+id/tv_MainIntro" />

    <Button
        android:id="@+id/btn_inventoryMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="156dp"
        android:layout_marginTop="348dp"
        android:background="@drawable/btn_main"
        android:padding="@dimen/padding_10dp"
        android:text="@string/inventory_btn_main"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/btn_shoppingMain"
        app:layout_constraintTop_toBottomOf="@+id/tv_MainIntro" />

    <Button
        android:id="@+id/btn_notesMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/btn_main"
        android:padding="@dimen/padding_10dp"
        android:text="@string/btn_notepad_main"
        android:textColor="@color/white"
        app:layout_constraintStart_toEndOf="@+id/btn_shoppingMain"
        app:layout_constraintTop_toBottomOf="@+id/tv_MainIntro" />


</androidx.constraintlayout.widget.ConstraintLayout>