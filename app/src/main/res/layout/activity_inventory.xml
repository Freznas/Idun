<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="@color/beige"
    tools:context=".InventoryActivity">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:padding="@dimen/padding_10dp"
        android:text="@string/click_to_delete_item"
        android:textColor="@color/black"
        android:textSize="@dimen/delete_item_txt_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_inventoryItemToPlace">

    </TextView>

    <EditText
        android:id="@+id/et_inventoryAmountToPlace"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="44dp"
        android:layout_marginBottom="120dp"
        android:background="@color/brown"
        android:hint="@string/amount_to_add_inventory"
        android:padding="@dimen/padding_10dp"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_editInventory"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/et_inventoryItemToPlace"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="124dp"
        android:autofillHints=""
        android:background="@color/brown"
        android:hint="@string/item_to_add_inventory"
        android:padding="@dimen/padding_10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/btn_editInventory"
        app:layout_constraintStart_toStartOf="parent">

    </EditText>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10dp"
        android:text="@string/inventory_title"
        android:textColor="@color/black"
        android:textSize="35sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.013">

    </TextView>

    <ListView
        android:id="@+id/lv_Inventory"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:background="@color/brown"
        android:padding="@dimen/padding_10dp"

        app:layout_constraintBottom_toTopOf="@+id/btn_editInventory"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btn_editInventory"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/btn_inventory"
        android:padding="@dimen/padding_10dp"

        android:text="@string/add_to_inventory_btn"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    </Button>


</androidx.constraintlayout.widget.ConstraintLayout>