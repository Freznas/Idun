<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="3dp"
    android:background="@color/light_gray"
    tools:context=".ShoppingActivity">


    <TextView
        android:id="@+id/tv_ShoppingListTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_10dp"
        android:text="@string/ShoppingActivityTitle"
        android:textColor="@color/black"
        android:textSize="35sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023">

    </TextView>


    <ListView
        android:id="@+id/lv_ShoppingList"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginBottom="179dp"
        android:background="@color/white"
        android:padding="@dimen/padding_10dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_RemoveFromList"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_ShoppingListTitle" />

    <EditText
        android:id="@+id/et_ItemToPlace"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="17dp"
        android:autofillHints=""
        android:background="@color/white"
        android:hint="@string/item_to_add_shopping"
        android:padding="@dimen/padding_10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_ShoppingList">

    </EditText>

    <EditText
        android:id="@+id/et_amountToPlace"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="88dp"
        android:autofillHints=""
        android:background="@color/white"
        android:hint="@string/amount_to_add_shopping"
        android:padding="@dimen/padding_10dp"

        android:textColorHint="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lv_ShoppingList" />


    <Button
        android:id="@+id/btn_AddToList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_shopping"
        android:padding="@dimen/padding_10dp"

        android:text="@string/add_item_shopping_button"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_RemoveFromList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/btn_shopping"
        android:padding="@dimen/padding_10dp"

        android:text="@string/remove_item_shopping_button"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>